<%- model_class = Role -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.pluralize %></h1>
</div>

<%= render partial: 'roles', locals: { roles: @roles_without_deleted } %>
<%= link_to t('.new', default: t("helpers.links.new")),
            new_role_path,
            class: 'btn btn-primary' %>

<% unless @deleted_roles.blank? -%>
  <hr />
  <h2><%= t('.destroyed_roles') %></h2>
  <%= render partial: 'roles', locals: { roles: @deleted_roles } %>
<% end -%>
